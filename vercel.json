{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm run install:all",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "server/**"
    }
  },
  "env": {
    "PORT": "5002",
    "NODE_ENV": "production"
  }
}
